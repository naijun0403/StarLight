<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#1b191b"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    tools:ignore="HardcodedText"
    tools:context=".ui.splash.quickstart.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nanumsquare_neo_regular"
            android:text="Project ✦"
            android:textColor="@color/white"
            android:textSize="26sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_neo_extrabold"
            android:letterSpacing="0.3"
            android:text="StarLight"
            android:textColor="@color/white"
            android:textSize="26sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nanumsquare_neo_regular"
            android:text="@string/app_version"
            android:textColor="#C1C1C1"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:cardBackgroundColor="#373337"
                app:cardElevation="0dp"
                app:cardCornerRadius="23dp"
                android:layout_weight="0.3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✦ 시작하기"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nanumsquare_neo_bold"
                    android:layout_gravity="center"
                    android:textSize="15.5sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/button_next"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:cardBackgroundColor="#a79277"
                app:cardElevation="0dp"
                app:cardCornerRadius="23dp"
                android:layout_marginStart="18dp"
                android:layout_weight="0.7">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_keyboard_arrow_right_24"
                    app:tint="@color/white"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>